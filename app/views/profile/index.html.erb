
<header>
	<div class = 'links'>
		 <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> 
		 <%= link_to "Edit Login", edit_user_registration_path %> 
		 <%= link_to "Edit Specs", user_path %> 
		 <%= link_to "Create a Book Club", create_group_path %>  
		 
	</div>
</header>

<div class='profile_title'>
	<h1><%= @screen_name %></h1>
	<div class= 'display_specs'>
		<p> <%= @user.first_name %> <%= @user.last_name %> </p>
		<p> <%= @user.city %> <%= @user.state %> </p>
		<%= link_to "Edit Specs", user_path %> </p>
	</div>
</div>



<div class = 'display_friend_search'>
	<h3>Search For Friends</h3>
	<%= text_field_tag 'search_input' %>
		<ul id='friend-search-table'>

	    </ul>
</div>

<div class = 'display_friends'>
	<h3> Display Friends </h3>
	<table>
		<thead>

		</thead>
		<tbody id='friend-table'>
			 <% for friend in @user.friends %>
			   <tr>
			    <td>
			      <%= friend.first_name %>
			      <%= link_to "remove", "/friendships/delete/#{friend.id}" %>
			    </td>
			   </tr>
			  <% end %>

	    </tbody>
		
	</table>
</div>





